<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="360"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:repeatCount="infinite"
    android:toDegrees="1440">
    <shape
        android:innerRadius="24dp"
        android:shape="ring"
        android:thickness="8dp"
        android:useLevel="false">
        <size
            android:width="64dp"
            android:height="64dp" />
        <gradient
            android:centerColor="#801B603C"
            android:centerY="0.5"
            android:endColor="#026B42"
            android:startColor="#00026B42"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>
